<div class="jumbotron">
  <h1 class="display-4">Devour da burger</h1>
  <small class="form-text text-muted" >Keep track of those tasty burgers you want to eat</small>
  <hr class="my-4">

  <div class="container">
    {{!-- form --}}
    <form>
      <div class="form-group">
        <label for="burgerInput">What is the name of your next burger?</label>
        <input type="text" class="form-control" id="burgerInput" aria-describedby="add a new burger">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  {{!-- form --}}
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Cat Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="slee">Sleepy?</label><br>
      <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
      <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
  </form>

</div>